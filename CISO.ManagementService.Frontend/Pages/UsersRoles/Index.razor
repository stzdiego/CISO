        <PropertyColumn T="UserRole" TProperty="string" Property="x => x.User!.Email" Title="@Localization.Get("General.User")" Hideable="true" Grouping="true" Hidden="true" />
        <PropertyColumn T="UserRole" TProperty="string" Property="x => x.Role!.Name" Title="@Localization.Get("General.Role")" Hideable="true" />
        <PropertyColumn T="UserRole" TProperty="DateTime" Property="x => x.CreatedAt" Title="@Localization.Get("General.CreationDate")" Hidden="true" Hideable="true" Groupable="false" />
        <PropertyColumn T="UserRole" TProperty="DateTime?" Property="x => x.UpdatedAt" Title="@Localization.Get("General.UpdateDate")" Hidden="true" Hideable="true" Groupable="false" />
    </Columns>
</STZDataGrid>