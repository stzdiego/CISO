@page "/Companies"
@using CISO.ManagementService.Shared.Entities
@using Microsoft.AspNetCore.Components.Web
@using STZ.Frontend.Components
@using STZ.Frontend.Services
@using MudBlazor
@using STZ.Shared.Entities
@inject LocalizationService Localization

<PageTitle><STZText Key="Companies.Title" /></PageTitle>

<STZDataGrid TItem="Company" TId="Guid" Title="Companies.Title" DetailComponentType="typeof(View)" EditComponentType="typeof(Edit)" AddComponentType="typeof(Add)" >
    <Columns>
        <PropertyColumn T="Company" TProperty="string" Property="x => x.Name" Title="@Localization.Get("General.Name")" Hideable="true"/>
        <PropertyColumn T="Company" TProperty="string" Property="x => x.Nit" Title="@Localization.Get("General.Nit")" Hidden="true" Hideable="true"/>
        <PropertyColumn T="Company" TProperty="DateTime" Property="x => x.CreatedAt" Title="@Localization.Get("General.CreationDate")" Hideable="true"/>
        <PropertyColumn T="Company" TProperty="DateTime?" Property="x => x.UpdatedAt" Title="@Localization.Get("General.UpdateDate")" Hidden="true" Hideable="true"/>
    </Columns>
</STZDataGrid>