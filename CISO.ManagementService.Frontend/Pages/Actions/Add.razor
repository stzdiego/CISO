@using MudBlazor
@using STZ.Frontend.Components
@using STZ.Frontend.Services
@using Action = CISO.ManagementService.Shared.Entities.Action
@inject LocalizationService Localization

<MudForm>
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("Action.Name")" @bind-Value="Item.Name"/>
        </MudItem>
    </MudGrid>
    
    <MudStack Row Class="mt-4" Justify="Justify.FlexEnd">
        <MudButton OnClick="() => MudDialog.Cancel()"><STZText Key="General.Cancel" /></MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="() => MudDialog.Close(DialogResult.Ok(Item))"><STZText Key="General.Create" /></MudButton>
    </MudStack>
</MudForm>

@code {
    [Parameter] public Action Item { get; set; } = new();
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
}