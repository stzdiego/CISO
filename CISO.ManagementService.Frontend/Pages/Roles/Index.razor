@page "/Roles"
@using CISO.ManagementService.Shared.Entities
@using Microsoft.AspNetCore.Components.Web
@using STZ.Frontend.Components
@using STZ.Frontend.Services
@using MudBlazor
@inject LocalizationService Localization

<PageTitle><STZText Key="Roles.Title" /></PageTitle>

<STZDataGrid TItem="Role" TId="Guid" Title="Roles.Title" DetailComponentType="typeof(View)" EditComponentType="typeof(Edit)" AddComponentType="typeof(Add)" >
    <Columns>
        <PropertyColumn T="Role" TProperty="string" Property="x => x.Name" Title="@Localization.Get("General.Name")" Hideable="true"/>
        <PropertyColumn T="Role" TProperty="DateTime" Property="x => x.CreatedAt" Title="@Localization.Get("General.CreationDate")" Hideable="true"/>
        <PropertyColumn T="Role" TProperty="DateTime?" Property="x => x.UpdatedAt" Title="@Localization.Get("General.UpdateDate")" Hidden="true" Hideable="true"/>
    </Columns>
</STZDataGrid>