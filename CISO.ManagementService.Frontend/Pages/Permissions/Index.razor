@page "/Permissions"
@using CISO.ManagementService.Shared.Entities
@using Microsoft.AspNetCore.Components.Web
@using STZ.Frontend.Components
@using STZ.Frontend.Services
@using MudBlazor
@inject LocalizationService Localization

<PageTitle><STZText Key="Permissions.Title" /></PageTitle>

<STZDataGrid TItem="Permission" TId="Guid" Title="Permissions.Title" DetailComponentType="typeof(View)" EditComponentType="typeof(Edit)" AddComponentType="typeof(Add)" >
    <Columns>
        <PropertyColumn T="Permission" TProperty="string" Property="x => x.Role.Name" Title="@Localization.Get("General.Role")" Hideable="true" Grouping="true" Hidden="true" />
        <PropertyColumn T="Permission" TProperty="string" Property="x => x.Feature.Name" Title="@Localization.Get("General.Feature")" Hideable="true" />
        <PropertyColumn T="Permission" TProperty="string" Property="x => x.Action.Name" Title="@Localization.Get("General.Action")" Hideable="true" Groupable="false" />
        <PropertyColumn T="Permission" TProperty="DateTime" Property="x => x.CreatedAt" Title="@Localization.Get("General.CreationDate")" Hidden="true" Hideable="true" Groupable="false" />
        <PropertyColumn T="Permission" TProperty="DateTime?" Property="x => x.UpdatedAt" Title="@Localization.Get("General.UpdateDate")" Hidden="true" Hideable="true" Groupable="false" />
    </Columns>
</STZDataGrid>