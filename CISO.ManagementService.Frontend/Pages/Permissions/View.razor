@using CISO.ManagementService.Shared.Entities
@using MudBlazor
@using STZ.Shared.Entities
@using STZ.Frontend.Components
@using STZ.Frontend.Services
@inject LocalizationService Localization

<MudForm ReadOnly>
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.Role")" Value="@Item.Role?.Name" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.Feature")" Value="@Item.Feature?.Name" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.Action")" Value="@Item.Action?.Name" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="DateTime" Label="@Localization.Get("General.CreationDate")" Value="@Item.CreatedAt"/>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="DateTime?" Label="@Localization.Get("General.UpdateDate")" Value="@Item.UpdatedAt"/>
        </MudItem>
    </MudGrid>
    
    <MudStack Row Class="mt-4" Justify="Justify.FlexEnd">
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="() => MudDialog.Close()"><STZText Key="General.Close" /></MudButton>
    </MudStack>
</MudForm>

@code {
    [Parameter] public required Permission Item { get; set; }
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
}