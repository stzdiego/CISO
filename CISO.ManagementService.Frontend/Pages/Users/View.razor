@using CISO.ManagementService.Shared.Entities
@using MudBlazor
@using STZ.Shared.Entities
@using STZ.Frontend.Components
@using STZ.Frontend.Services
@inject LocalizationService Localization

<MudForm ReadOnly>
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.Company")" Value="@Item.Company?.Name"/>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.Nid")" Value="@Item.Nid" InputType="InputType.Number"/>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.FirstName")" Value="@Item.FirstName"/>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.LastName")" Value="@Item.LastName"/>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.Email")" Value="@Item.Email" InputType="InputType.Email"/>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.Phone")" Value="@Item.Phone" InputType="InputType.Telephone" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="string" Label="@Localization.Get("General.Password")" Value="@Item.PasswordHash" InputType="InputType.Password" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="DateTime" Label="@Localization.Get("General.CreationDate")" Value="@Item.CreatedAt"/>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField T="DateTime?" Label="@Localization.Get("General.UpdateDate")" Value="@Item.UpdatedAt"/>
        </MudItem>
    </MudGrid>
    
    <MudStack Row Class="mt-4" Justify="Justify.FlexEnd">
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="() => MudDialog.Close()"><STZText Key="General.Close" /></MudButton>
    </MudStack>
</MudForm>

@code {
    [Parameter] public required User Item { get; set; }
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
}