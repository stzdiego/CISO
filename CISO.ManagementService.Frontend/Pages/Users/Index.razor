@page "/Users"
@attribute [STZAuthorize("Users")]
@using Microsoft.AspNetCore.Components.Web
@using STZ.Frontend.Components
@using STZ.Frontend.Services
@using MudBlazor
@using STZ.Frontend.Authorization
@using STZ.Shared.Entities
@inject LocalizationService Localization

<PageTitle>@Localization.Get("Users.Title")</PageTitle>

<STZDataGrid TItem="User" TId="Guid" Title="Users.Title" DetailComponentType="typeof(View)" EditComponentType="typeof(Edit)" >
    <Columns>
        <STZColumn T="User" TProperty="string" Property="x => x.Nid ?? string.Empty" Title="General.Nid" Hideable="true"/>
        <STZColumn T="User" TProperty="string" Property="x => x.FullName" Title="General.Name" Hideable="true"/>
        <STZColumn T="User" TProperty="string" Property="x => x.Email" Title="General.Email" Hidden="true" Hideable="true"/>
        <STZColumn T="User" TProperty="DateTime" Property="x => x.CreatedAt" Title="General.CreationDate" Hideable="true"/>
        <STZColumn T="User" TProperty="DateTime?" Property="x => x.UpdatedAt" Title="General.UpdateDate" Hidden="true" Hideable="true"/>
    </Columns>
</STZDataGrid>