@using static STZ.Frontend.Configuration.RazorAssemblyConfiguration
@using Microsoft.AspNetCore.Components.Authorization
@using CISO.Frontend.Components.Pages

<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="@GetAssembliesWithRazorPages()">
        <Found Context="routeData">
            <STZRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <STZLoader Text="Login.Authorizing" Visible="true" />
                </Authorizing>
                <NotAuthorized>
                    <RedirectToLoginIfNotAuthenticated Layout="typeof(PresentationLayout)"/>
                </NotAuthorized>
            </STZRouteView>
        </Found>
        <NotFound>
            <PageNotFound Layout="typeof(PresentationLayout)" />
        </NotFound>
    </Router>
</CascadingAuthenticationState>
